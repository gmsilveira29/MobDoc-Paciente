<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Data 15/07/2017 - 18:82"
        android:id="@+id/tvTitProntuario"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:gravity="left"
        />
    <View
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="3dp"
        android:background="#377eb3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="O paciente está apresentando muitasmelhorasgraduas e pequenas mas que está dandocerto"
        android:id="@+id/tvDescProntuario"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:gravity="left"
        />
    <View
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="3dp"
        android:background="#377eb3" />
    <View
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:background="#2071ae" />

</LinearLayout>